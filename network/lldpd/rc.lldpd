#!/bin/sh

mkdir -p /run/lldpd

lldpd_start() {
  /usr/sbin/lldpd >/dev/null 2>&1
}

lldpd_stop() {
  killall lldpd
}

lldpd_restart() {
  lldpd_stop
  sleep 1
  lldpd_start
}

case "$1" in
  'start')
    lldpd_start
  ;;
  'stop')
    lldpd_stop
  ;;
  'restart')
    lldpd_restart
  ;;
  *)
    echo "Usage: $0 start|stop|restart"
  ;;
esac

